.recommend .title{
    display: flex;
    margin-top: 30rpx;
    margin-left: 30rpx;
    align-items: center;
}
.recommend .title .nav {
    display: inline-block;
    background-color: #058cf1;
    width: 10rpx;
    height: 50rpx;
    border-radius: 5rpx;
}

.recommend .title .name {
    font-family:FangSong;
    margin-left: 30rpx;
}


.recommend .menu {
    margin-top: 25rpx;
    width: 100%;
    height:280rpx;
    white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

  
.recommend .menu .item {
    width: 220rpx;
    display:inline-block;
    margin-left: 30rpx;
    
}
.recommend .menu .item image {
    display: block;
    width: 220rpx;
    height: 205rpx;
    border-radius: 15rpx;
}

.recommend .menu .item .message {
    display: block;
    font-family:FangSong;
    font-size: 25rpx;
}
.recommend .menu .item .message:last-child {
    color: red;
}

.recommend .menu .item i-rate{
    margin-top: -15rpx;
}
 

