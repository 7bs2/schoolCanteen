/* 搜素列表 */
.item {
    margin-top: 10rpx;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
    border-radius: 20rpx;
    background-color: #fafafa;
    margin-left: 25rpx;
    margin-right: 25rpx;
}
.shop_nav_item {
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    position: relative;
    align-items: center;
}

 .shop_nav_item .detail {
    position: absolute;
    display: flex;
    flex-direction: column;
   align-items: center;
   justify-content: center;
   left: 500rpx;
}


 .shop_nav_item .detail .text_small {
    font-family:FangSong;
    color: #7a7878;
    font-size: 30rpx;
}
.shop_nav_item .detail .score {
    font-size: 30rpx;
    color: #7a7878
}
.shop_nav_item .detail .control {
    display: flex;
    flex-direction: row;
}
.shop_nav_item image{
    width: 220rpx;
    height: 205rpx;
    border-radius: 15rpx;
   
}

