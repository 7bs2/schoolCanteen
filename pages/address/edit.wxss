/* pages/address/edit.wxss */
page{
    background-color: #f5f5f5;
}
.content {
    margin: 6rpx 20rpx;
    border-radius: 10rpx;
}

.label-txt {
    width: 130rpx;
    font-size: 26rpx;
    color: #333;
}

.input-txt {
    font-size: 26rpx;
}

.input-placeholder {
    font-size: 26rpx;
    color: #dcdcdd;
}

.check-default {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
}

.check-default icon {
    margin-right: 10rpx;
}

/* 保存按钮 */
.add-address{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
  }
  
  .add-address .txt{
    width: 60vw;
    height: 75rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 5rpx solid #46afff;
    background-origin: 5rpx;
    font-size: 30rpx;
    color: #46afff;
    border-radius: 30rpx;
    letter-spacing:5rpx;
  }