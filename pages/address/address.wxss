/* 没有地址布局 */
page{
    background-color: #f5f5f5;
  }
  .address-none{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80%;
    
  }
  .none-content{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .none-content image{
    margin-top: 150%;
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
  }
  .none-content .txt{
    font-size: 26rpx;
    color: #999;
  }
  /* 添加按钮 */
  .add-address{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
  }
  
  .add-address .txt{
    width: 60vw;
    height: 75rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 5rpx solid #46afff;
    background-origin: 5rpx;
    font-size: 30rpx;
    color: #46afff;
    border-radius: 30rpx;
    letter-spacing:5rpx;
  }
  
  /* 地址列表 */
  .address-list{
    display: flex;
    flex-direction: column;
    margin-bottom: 95rpx;
  }
  
  .address-item{
    display: flex;
    flex-direction: column;
    margin: 6rpx 20rpx;
    padding: 20rpx 20rpx 20rpx 20rpx;
    border-radius: 10rpx;
    background: #fff;
  }
  
  .item-top{
    font-size: 28rpx;
    color: #333; 
  }
  
  .item-content{
    font-size: 24rpx;
    color: #999;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #dcdcdc;
  }
  
  .item-bottom{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    color: #999;
  }
  
  .item-bottom .right{
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  
  .item-bottom .right .txt{
    margin-left: 10rpx;
    padding-bottom: 0 10rpx;
  }