    background-size: 100% 60%;
    background-repeat: no-repeat;
    color: white;
    width: 30%;
    border-radius: 5px 0 0 5px;
}

.right {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    background: #58a;
    background: radial-gradient(circle at top left, transparent 6px, #7bc4fc 0) top left, radial-gradient(circle at bottom left, transparent 6px, #7bc4fc 0) bottom left;
    background-size: 100% 60%;
    background-repeat: no-repeat;
    width: 70%;
    color: white;
    border-radius: 0 5px 5px 0;
}
.right1 {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    background: #959595;
    background: radial-gradient(circle at top left, transparent 6px, #9b9b9b 0) top left, radial-gradient(circle at bottom left, transparent 6px, #9b9b9b 0) bottom left;
    background-size: 100% 60%;
    background-repeat: no-repeat;
    width: 70%;
    color: white;
    border-radius: 0 5px 5px 0;
}
.right::after {
    content: "";
    position: absolute;
    top: 16px;
    height: 102px;
    border-left: 2rpx dashed #fff;
}

.right1::after {
    content: "";
    position: absolute;
    top: 16px;
    height: 102px;
    border-left: 2rpx dashed #fff;
}


