.wrapper {
    display: flex;
    position: relative;
    width: 677rpx;
    height: 240rpx;
    margin: auto;
    filter: drop-shadow(2px 2px 3px #999);
}

.left {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
    background: #58a;
    background: radial-gradient(circle at top right, transparent 6px, #7bc4fc 0) top right, radial-gradient(circle at bottom right, transparent 6px, #7bc4fc 0) bottom right;
    background-size: 100% 60%;
    background-repeat: no-repeat;
    color: white;
    width: 30%;
    border-radius: 5px 0 0 5px;
}
.left1{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
